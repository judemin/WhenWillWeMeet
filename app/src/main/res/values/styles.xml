<resources xmlns:android="http://schemas.android.com/apk/res/android">

    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">

        <item name="colorPrimary">@color/baseBlue</item>
        <item name="colorPrimaryDark">@color/gray</item>

        <item name="android:textViewStyle">@style/TVFontStyle</item>

        <item name="android:buttonStyle">@style/BtnFontStyle</item>

    </style>

    <style name="TVFontStyle" parent="android:Widget.TextView">
        <item name="android:fontFamily">@font/gmarket_sans_medium</item>
    </style>

    <style name="BtnFontStyle" parent="android:Widget.Holo.Button">
        <item name="android:fontFamily">@font/gmarket_sans_medium</item>
        <item name="android:background">@drawable/button_selector</item>
    </style>

    <style name="PickerTheme">
        <!-- Customize your theme here. -->
        <item name="android:fontFamily">@font/gmarket_sans_medium</item>
    </style>

    <style name="SCBSwitch" parent="Theme.AppCompat.Light">
        <!-- active thumb & track color (30% transparency) -->
        <item name="colorControlActivated">@color/baseBlue</item>

        <!-- inactive thumb color -->
        <item name="colorSwitchThumbNormal">@color/baseBlue
        </item>

        <!-- inactive track color (30% transparency) -->
        <item name="android:colorForeground">@color/baseBlue
        </item>
    </style>

</resources>
