<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        >

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            >

            <LinearLayout
                android:id="@+id/createRoom_ll1"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                android:layout_marginLeft="40dp"
                android:layout_marginRight="40dp"
                android:layout_marginTop="40dp"
                android:orientation="horizontal"
                android:weightSum="10"
                >

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:text="약속 코드"
                    android:layout_weight="2.5"
                    android:textSize="18sp"
                    android:gravity="center"
                    />
                <TextView
                    android:id="@+id/createRoom_codeTV"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="6.8"
                    android:text="ABCDEFGHIJ"
                    android:textSize="18sp"
                    android:gravity="center"
                    />

                <ImageView
                    android:id="@+id/createRoom_copyIV"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:src="@drawable/copy_icon"
                    android:layout_weight="0.7"
                    android:gravity="center"
                    />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/createRoom_ll2"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toBottomOf="@id/createRoom_ll1"
                android:layout_marginLeft="40dp"
                android:layout_marginRight="40dp"
                android:layout_marginTop="20dp"
                android:orientation="horizontal"
                android:weightSum="10"
                >

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:text="비밀 번호"
                    android:layout_weight="2.5"
                    android:textSize="18sp"
                    android:gravity="center"
                    />

                <EditText
                    android:id="@+id/createRoom_passwdET"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="7.5"
                    android:maxLines="1"
                    android:maxLength="15"
                    android:inputType="textVisiblePassword"
                    android:hint="공백이면 비밀번호 없음"
                    />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/createRoom_ll3"
                android:layout_width="match_parent"
                android:layout_height="140dp"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toBottomOf="@id/createRoom_ll2"
                android:layout_marginLeft="40dp"
                android:layout_marginRight="40dp"
                android:layout_marginTop="20dp"
                android:orientation="horizontal"
                android:weightSum="10"
                >

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:text="기간"
                    android:layout_weight="2.5"
                    android:textSize="18sp"
                    android:gravity="center"
                    />

                <DatePicker
                    android:id="@+id/createRoom_stDateDP"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="7.5"
                    android:maxLines="1"
                    android:maxLength="15"
                    android:datePickerMode="spinner"
                    android:calendarViewShown="false"
                    />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/createRoom_ll4"
                android:layout_width="match_parent"
                android:layout_height="140dp"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toBottomOf="@id/createRoom_ll3"
                android:layout_marginLeft="40dp"
                android:layout_marginRight="40dp"
                android:orientation="horizontal"
                android:weightSum="10"
                >

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:text=""
                    android:layout_weight="2.5"
                    android:textSize="18sp"
                    android:gravity="center"
                    />

                <DatePicker
                    android:id="@+id/createRoom_edDateDP"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="7.5"
                    android:maxLines="1"
                    android:maxLength="15"
                    android:datePickerMode="spinner"
                    android:calendarViewShown="false"
                    />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/createRoom_ll5"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toBottomOf="@id/createRoom_ll4"
                android:layout_marginLeft="40dp"
                android:layout_marginRight="40dp"
                android:layout_marginTop="20dp"
                android:orientation="horizontal"
                android:weightSum="10"
                >

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:text="약속 장소"
                    android:layout_weight="2.5"
                    android:textSize="18sp"
                    android:gravity="center"
                    />

                <EditText
                    android:id="@+id/createRoom_locationET"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="7.5"
                    android:maxLines="1"
                    android:inputType="textVisiblePassword"
                    android:hint="온라인"
                    />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/createRoom_ll6"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toBottomOf="@id/createRoom_ll5"
                android:layout_marginLeft="40dp"
                android:layout_marginRight="40dp"
                android:layout_marginTop="20dp"
                android:orientation="horizontal"
                android:weightSum="10"
                >

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:text="날짜 복수 선택 여부"
                    android:layout_weight="5"
                    android:textSize="18sp"
                    android:gravity="center"
                    />

                <Switch
                    android:id="@+id/createRoom_switchBtn"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="5"
                    android:layout_gravity="center"
                    android:checked="true"
                    />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/createRoom_ll7"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toBottomOf="@id/createRoom_ll6"
                android:layout_marginLeft="40dp"
                android:layout_marginRight="40dp"
                android:layout_marginTop="20dp"
                android:orientation="horizontal"
                android:weightSum="10"
                >

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:text="공지사항"
                    android:layout_weight="2.5"
                    android:textSize="18sp"
                    android:gravity="center"
                    />

                <EditText
                    android:id="@+id/createRoom_noticeET"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="7.5"
                    android:layout_gravity="center"
                    android:maxLines="3"
                    android:hint="우리 언제 만나?"
                    />

            </LinearLayout>

            <Button
                android:id="@+id/createRoom_makeRoomBtn"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toBottomOf="@id/createRoom_ll7"
                android:layout_marginLeft="40dp"
                android:layout_marginRight="40dp"
                android:layout_marginTop="20dp"
                android:text="약속 잡기"
                />

        </androidx.constraintlayout.widget.ConstraintLayout>

    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>